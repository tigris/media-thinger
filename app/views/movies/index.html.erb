<%= link_to 'Add', new_movie_path %>

<% form_tag(movies_path, :method => :get) do %>
  <div>
    <%= label_tag :title, 'Title' %><br />
    <%= text_field_tag :title %>
  </div>
  <%= button_for :find %>
<% end %>

<% unless @movies.blank? %>
<h2>Search results</h2>
<ul>
  <% render :partial => 'shared/movie', :collection => @movies, :as => :movie %>
</ul>
<% end %>
